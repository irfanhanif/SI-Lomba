<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:isScrollContainer="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tim_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tim_nama"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nama Team"/>

            <TextView
                android:id="@+id/tim_deskripsi"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Tim"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:text="Anggota : "/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tim_anggota_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@color/colorAccent"/>
                <ImageView
                    android:id="@+id/tim_anggota_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:src="@color/colorPrimary"/>
                <ImageView
                    android:id="@+id/tim_anggota_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:src="@color/colorAccent"/>
                <ImageView
                    android:id="@+id/tim_anggota_4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:src="@color/colorAccent"/>
                <ImageView
                    android:id="@+id/tim_anggota_5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:src="@color/colorPrimary"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lomba : "/>
            <ImageView
                android:id="@+id/tim_lomba_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"/>
            <Button
                android:id="@+id/atur_tim_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atur Halaman"/>
            <Button
                android:id="@+id/request_calon_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Keanggotaan" />
        </LinearLayout>
</ScrollView>